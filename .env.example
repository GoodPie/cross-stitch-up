# Authentication (Better Auth)
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=
# Your app's base URL
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Database
# PostgreSQL connection string
POSTGRES_URL=postgresql://user:password@localhost:5432/crossstitchup

# Supabase
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Email (Resend)
# Get your API key from: https://resend.com
RESEND_API_KEY=

# Sentry (Optional)
# Get your auth token from: https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=

# Vercel Blob Storage (Optional)
# Auto-generated when using Vercel Blob
BLOB_READ_WRITE_TOKEN=

# Development only
# Set to 0 if using self-signed certificates locally
# NODE_TLS_REJECT_UNAUTHORIZED=0
